# ~/.xprofile
# Ensures ~/.local/bin is in PATH for all GUI apps (VSCode, etc)
export PATH="$HOME/.local/bin:$PATH"

# Add any additional PATH modifications here (applies to all sessions):
# (Moved from .zshrc)

# tfenv and user-local bins
if [[ -d "$HOME/.tfenv/bin" ]]; then
	export PATH="$HOME/.tfenv/bin:$PATH"
fi

if [[ -d "$HOME/.tfenv/versions" ]]; then
	for vdir in "$HOME/.tfenv/versions"/*; do
		if [[ -d "$vdir" ]]; then
			# prefer a bin/ subdir if present, otherwise add the version dir
			if [[ -d "$vdir/bin" ]]; then
				PATH="$vdir/bin:$PATH"
			elif [[ -x "$vdir/terraform" ]]; then
				PATH="$vdir:$PATH"
			fi
		fi
	done
	export PATH
fi

if [[ -d "$HOME/.local/bin" ]]; then
	export PATH="$HOME/.local/bin:$PATH"
fi

